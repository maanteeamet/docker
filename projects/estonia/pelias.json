{
  "logger": {
    "level": "debug",
    "timestamp": false
  },
  "esclient": {
    "apiVersion": "7.5",
    "hosts": [
      { "host": "elasticsearch" }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "api": {
    "textAnalyzer": "libpostal",
    "services": {
      "pip": { "url": "http://pip:4200" },
      "libpostal": { "url": "http://libpostal:4400" },
      "placeholder": { "url": "http://placeholder:4100" },
      "interpolation": { "url": "http://interpolation:4300" }
    },
    "defaultParameters": {
      "focus.point.lat": 58.671392,
      "focus.point.lon": 25.54665
    },
    "customBoosts": {
      "layer": {
        "venue": 5,
        "address": 4,
        "locality": 3,
        "street": 2
      },
      "source": {
        "gtfsestonia": 3,
        "openaddresses": 5,
        "openstreetmap": 0
      }
    }
  },
  "imports": {
    "adminLookup": {
      "enabled": false
    },
    "geonames": {
      "datapath": "/data/geonames",
      "countryCode": "EE"
    },
    "openstreetmap": {
      "download": [
        { "sourceURL": "http://download.geofabrik.de/europe/estonia-latest.osm.pbf" }
      ],
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [{
        "filename": "estonia-latest.osm.pbf"
      }]
    },
    "openaddresses": {
      "datapath": "/data/openaddresses",
      "dataHost": "http://address.dev.peatus.ee"
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [ "extract.0sv" ]
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "importVenues": false,
      "importPostalcodes": true,
      "importPlace": [ "85633135" ]
    },
    "transit": {
      "datapath": "/data/transit",
      "feeds": [
        {
          "layerId": "stops",
          "url": "http://peatus.ee/gtfs/gtfs.zip",
          "filename": "stops.txt",
          "agencyId": "Eesti",
          "agencyName": "Eesti",
          "layerName": "Stop"
        }
      ]
    }
  }
}
